{% extends '::base.html.twig' %}

{% block body -%}
    <h1>ServiceNowConfig list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Application</th>
                <th>Businessservice</th>
                <th>Category</th>
                <th>Subcategory</th>
                <th>Configurationitem</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('servicenowconfig_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.application }}</td>
                <td>{{ entity.businessService }}</td>
                <td>{{ entity.category }}</td>
                <td>{{ entity.subcategory }}</td>
                <td>{{ entity.configurationItem }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('servicenowconfig_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('servicenowconfig_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('servicenowconfig_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
